<div class="appointment">
  <% if current_user %>
  <%= appointment_heading(appointment) %>
  <% elsif current_staff %>
  <i class="checked calendar icon"></i><%= link_to("<span>#{appointment.client_name}</span>".html_safe, client_path(appointment), :remote => true ) %>
  <br />
  <small>Duration: <%= short_time(appointment) %>-<%= end_time(appointment) %></small>
  <br />
  <small>Manager: <%= appointment.user.first_name %> <%= appointment.user.last_name %></small>
  <% else %>
  <% end %>

  <% if current_user %>
  <br />
  <small><%= appointment_edit_delete_links(appointment) %></small>
  <% end %>

  <br />
  <br />
</div>
